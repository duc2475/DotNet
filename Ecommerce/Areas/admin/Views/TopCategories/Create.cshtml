@model Ecommerce.Models.TblTopCategory

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Quản Lý Ngành Hàng/</span> Thêm Ngành Hàng Lớn</h4>

        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Thêm Ngành Hàng Lớn Mới</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="TcatName" class="form-label">Tên ngành hàng lớn</label>
                                <input asp-for="TcatName" class="form-control" />
                                <span asp-validation-for="TcatName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ShowOnMenu" class="form-label">Trạng Thái</label>
                                <select asp-for="ShowOnMenu" class="form-control">
                                    <option value="1">Active</option>
                                    <option value="2">Hidden</option>
                                    <option value="3">Unactive</option>
                                </select>
                                <span asp-validation-for="ShowOnMenu" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="form-group pt-4 col">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                                <div class="form-group pt-4 col-2">
                                    <a asp-action="Index" asp-controller="MidCategories" asp-area="admin" class="btn btn-primary">Back to list</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>