@model IEnumerable<Ecommerce.Models.TblTopCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Quản Lý Ngành Hàng /</span> Ngành Hàng Lớn</h4>

        <!-- Basic Bootstrap Table -->
        <div class="card">
            <div class="row">
                <h5 class="card-header col">Danh Sách Ngành Hàng Lớn</h5>
                <div class="col-2 pt-3">
                    <a asp-action="Create" asp-controller="TopCategories" asp-area="admin" class="btn btn-primary">Tạo mới</a>
                </div>
            </div>
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID Ngành</th>
                            <th>Tên Ngành Hàng</th>
                            <th>Trạng Thái</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelsitem => item.TcatId)</td>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@Html.DisplayFor(modelsitem => item.TcatName)</strong></td>
                                <td>@if(item.ShowOnMenu == 1)
                                    {
                                        <span class="badge badge bg-label-success me-1">Active</span>
                                    }else if(item.ShowOnMenu == 2)
                                    {
                                        <span class="badge bg-label-warning me-1">Hidden</span>
                                    }else
                                    {
                                        <span class="badge bg-label-danger me-1">Unactive</span>
                                    }
                                </td>
                                <td class="row">
                                    <a class="btn btn-sm btn-primary col-3" asp-route-id="@item.TcatId" asp-action="Edit" asp-controller="TopCategories" asp-area="admin">Edit</a>
                                    <form asp-action="Delete" class="col">
                                        <input type="hidden" name="id" value="@item.TcatId"/>
                                        <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger" />
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>