@model IEnumerable<Ecommerce.Models.TblPromotion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Quản Lý Khuyến Mãi /</span> DS Khuyến Mãi</h4>

        <!-- Basic Bootstrap Table -->
        <div class="card">
            <div class="row">
                <h5 class="card-header col">Danh Sách Khuyến Mãi</h5>
                <div class="col-2 pt-3">
                    <a asp-action="Create" asp-controller="Promotions" asp-area="admin" class="btn btn-primary">Tạo mới</a>
                </div>
            </div>
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID Khuyến Mãi</th>
                            <th>Tên Khuyễn Mãi</th>
                            <th>% Khuyến Mãi</th>
                            <th>Ngày Bắt Đầu</th>
                            <th>Ngày Kết Thúc</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelsitem => item.PromoId)</td>
                                <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@Html.DisplayFor(modelsitem => item.PromoName)</strong></td>
                                <td>
                                    @Html.DisplayFor(modelsitem => item.PromoDiscount)%
                                </td>
                                 <td>@Html.DisplayFor(modelsitem => item.PromoSdate)</td>
                                <td>@Html.DisplayFor(modelsitem => item.PromoEdate)</td>
                                <td class="row">
                                    <a class="btn btn-sm btn-primary col-3" asp-route-id="@item.PromoId" asp-action="Edit" asp-controller="Promotions" asp-area="admin">Edit</a>
                                    <a class="btn btn-sm btn-outline-warning col-3 ms-3" asp-route-id="@item.PromoId" asp-action="Index" asp-controller="ProductsPromotions" asp-area="admin">Add</a>
                                    <form asp-action="Delete" class="col">
                                        <input type="hidden" name="id" value="@item.PromoId" />
                                        <input type="submit" value="Delete" class="btn btn-sm btn-outline-danger" />
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>