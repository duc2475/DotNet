@model IEnumerable<Ecommerce.Models.TblCartDetail>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
    TblCart cart = ViewBag.Cart;
}


<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Quản Lý Khuyến Mãi /</span> Chi Tiết Khuyến Mãi</h4>

        <!-- Basic Bootstrap Table -->
        <div class="card">
            <div class="row">
                <div class="row">
                    <h5 class="card-header col">Mã Đơn Hàng: @cart.CartId</h5>
                    <div class="col-2 pt-3">
                        <a class="btn btn-primary" asp-action="Index" asp-controller="Carts" asp-area="admin">Back to list</a>
                    </div>
                </div>
                <div class="card-body">
                    <a class="m-3">Tên Khách Hàng: @cart.Cust.CustLname @cart.Cust.CustName</a>
                    <a class="m-3">Tổng Giá Tiền: @cart.TotalPrice</a>
                    <a class="m-3">Ngày Tạo Đơn: @cart.CartDate</a>
                </div>
            </div>
            <div class="row">
                <h5 class="card-header col">Danh Sách Sản Phẩm</h5>
            </div>
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID Sản Phẩm</th>
                            <th>Tên Sản Phẩm</th>
                            <th>Hình Ảnh</th>
                            <th>Giá Bán</th>
                            <th>Số Lượng</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @if (Model != null)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelsitem => item.ProductId)</td>
                                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@Html.DisplayFor(modelsitem => item.Product.ProductName)</strong></td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img class="img-fluid rounded" src="~/assets/img/products/@item.Product.ProductPic" style="max-width: 45px" alt="" />
                                        </div>
                                    </td>
                                    <td>@item.Product.ProductPrice.Value.ToString("#,##0")VNĐ</td>
                                    <td>@Html.DisplayFor(modelsitem => item.Quantity)</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <div>Khuyễn Mãi Chưa Áp Dụng Mặt Hàng Nào</div>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
