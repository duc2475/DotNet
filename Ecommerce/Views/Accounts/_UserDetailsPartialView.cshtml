@model  Ecommerce.Models.TblUser


    <h5 class="text mt-5" style="text-align:center">Thông Tin Tài Khoản</h5>

<div class="card-body">
    <div>
        <hr />
        <dl class="row">
            <dd class="col-sm-12 ">
                <img src="~/assets/img/users/@Model.UserPhoto" style="max-width: 100px" />
            </dd>
            <dt class="col-sm-6">
                Tên tài khoản:
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt class="col-sm-6">
                Email:
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.UserEmail)
            </dd>
            <dt class="col-sm-6">
                Số điện thoại:
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.UserPhone)
            </dd>
            <dt class="col-sm-6">
                Chức vụ:
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.UserRole)
            </dd>
            <dt class="col-sm-6">
                Trạng thái:
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.UserStatus)
            </dd>
        </dl>
    </div>
    <div class="row">
        <div class="form-group pt-4 col">
            <a asp-action="Index" value="Back To Home" class="btn btn-primary">Back To Home</a>
        </div>
        <div class="form-group pt-4 col-4">
            <a href="/dang-xuat.html" class="btn btn-primary">Đăng Xuất</a>
        </div>
    </div>
</div>